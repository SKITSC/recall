{% extends 'layout.twig' %}

{% block content %}
    <h1>Users</h1>
    <ul>
    {% for user in users %}
        <li>{{ user.username|e }}
        </li>
    {% endfor %}
    </ul>

    <h1>New User</h1>
    <form method="POST">
        <label>Username</label>
        <input type="text" name="username">
        <span class="invalid-feedback">{{username_error}}</span>   
        <label>Password</label>
        <input type="password" name="password">
        <span class="invalid-feedback">{{password_error}}</span>
        <input type="submit" value="Add">
    </form>
{% endblock %}